<title>Cumulus Test Site</title>
<meta charset="utf-8">
<link rel="stylesheet" href="/wp-content/themes/cumulus/style.css">

<h1>Cumulus Test Site</h1>

<main class="stack">
{% for field in ['test_image_1', 'test_image_2', 'test_image_3'] %}
  <div>
    {% set img = get_post(post.meta(field)) %}
    <h2>{{ img.title }}</h2>
    <p>{{ img.caption }}</p>

    <h3>Full size</h2>
    <img src="{{ img.src }}" alt="{{ img.alt }}">
    <pre>{{ img.src }}</pre>

    <h3>Large</h3>
    <img src="{{ img.src('large') }}" alt="{{ img.alt }}">
    <pre>{{ img.src('large') }}</pre>

    <h3>Custom Large</h3>
    <img src="{{ img.src('custom_large') }}" alt="{{ img.alt }}">
    <pre>{{ img.src('custom_large') }}</pre>

    <h3>Really tall</h3>
    <img src="{{ img.src('really_tall') }}" alt="{{ img.alt }}">
    <pre>{{ img.src('really_tall') }}</pre>

    <h3>Medium</h3>
    <img src="{{ img.src('medium') }}" alt="{{ img.alt }}">
    <pre>{{ img.src('medium') }}</pre>

    <h3>Custom Medium</h3>
    <img src="{{ img.src('custom_medium') }}" alt="{{ img.alt }}">
    <pre>{{ img.src('custom_medium') }}</pre>

    <h3>Custom Small</h3>
    <img src="{{ img.src('custom_small') }}" alt="{{ img.alt }}">
    <pre>{{ img.src('custom_small') }}</pre>

    <h3>Thumbnail</h3>
    <img src="{{ img.src('thumbnail') }}" alt="{{ img.alt }}">
    <pre>{{ img.src('thumbnail') }}</pre>
  </div>
{% endfor %}

</main>
